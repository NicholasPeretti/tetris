<!DOCTYPE html>
<html class="nice-background">
  <head>
    <title><%= title%></title>

    <link rel="manifest" href="/manifest.json" />

    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/assets/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/assets/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/assets/favicon-16x16.png"
    />

    <link
      rel="mask-icon"
      href="/assets/safari-pinned-tab.svg"
      color="#5bbad5"
    />
    <link rel="shortcut icon" href="/assets/favicon.ico" />
    <meta name="msapplication-TileColor" content="#2b5797" />
    <meta name="msapplication-config" content="/assets/browserconfig.xml" />
    <meta name="theme-color" content="#87a7be" />

    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, minimum-scale=1"
    />

    <link
      href="assets/Orbitron-Regular-subset.ttf"
      rel="preload"
      as="font"
      crossorigin
    />
    <style>
      @font-face {
        font-family: Orbitron;
        src: url(assets/Orbitron-Regular-subset.ttf);
        font-display: swap;
      }
    </style>

    <% files.css.forEach(cssFile => { %>
    <link rel="stylesheet" type="text/css" href="<%- cssFile.fileName %>" />
    <% }); %> <% workers.forEach(jsFile => { %>
    <link rel="preload" href="<%- jsFile.fileName %>" as="worker" />
    <% }); %>
    <!-- dynamicImports -->
    <% mainJsFile.dynamicImports.forEach(jsFile => { %>
    <link rel="preload" href="<%- jsFile %>" as="script" />
    <% }); %>
    <!-- Imports -->
    <% mainJsFile.imports.forEach(jsFile => { %>
    <link rel="preload" href="<%- jsFile %>" as="script" />
    <% }); %>

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script
      async
      src="https://www.googletagmanager.com/gtag/js?id=UA-123724276-3"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || []
      function gtag() {
        dataLayer.push(arguments)
      }
      gtag('js', new Date())

      gtag('config', 'UA-123724276-3')
    </script>
  </head>
  <body>
    <noscript>
      <div
        class="container h-full mx-auto sm:w-full md:w2/3 lg:w-1/3 text-center text-white"
      >
        <div
          class="h-full w-full text-center flex flex-col justify-center items-center"
        >
          <h1 class="text-4xl">
            JavaScript is disabled!
          </h1>
          <p class="px-4">
            Please enable JavaScript in order to enjoy the game
          </p>
        </div>
      </div>
    </noscript>
    <script>
      <%- mainJsFile.code %>
    </script>
  </body>
</html>
